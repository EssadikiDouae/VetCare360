<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.vetcare360.controllers.HomeController"
      alignment="CENTER" spacing="20" style="-fx-padding: 40;">
    <Label text="Welcome to VetCare360" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
    <HBox spacing="20" alignment="CENTER">
        <Button text="Owners" onAction="#handleOwners" minWidth="120" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Veterinarians" onAction="#handleVeterinarians" minWidth="120" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>
    <Button text="Show Owners and Pets" onAction="#handleShowOwnersWithPets" minWidth="200" style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
</VBox> 